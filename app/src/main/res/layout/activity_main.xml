<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- プレビュー画面 -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- フィルムカウンター -->
    <TextView
        android:id="@+id/film_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="残り 27枚"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/take_photo_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- シャッターボタン -->
    <Button
        android:id="@+id/take_photo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写真を撮る"
        app:layout_constraintBottom_toTopOf="@+id/film_change_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/film_counter" />

    <!-- フィルム交換ボタン -->
    <Button
        android:id="@+id/film_change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="フィルム交換"
        android:enabled="false"
       app:layout_constraintTop_toBottomOf="@+id/take_photo_button"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

    

</androidx.constraintlayout.widget.ConstraintLayout>
